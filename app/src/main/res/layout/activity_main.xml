<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neunit.speech.MainActivity">

    <Button
        android:id="@+id/speech_commands_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/speech_commands"
        app:layout_constraintBottom_toTopOf="@+id/speech_translation_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/speech_translation_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/speech_translation"
        app:layout_constraintBottom_toTopOf="@id/tts_synthesis_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_commands_btn" />

    <Button
        android:id="@+id/tts_synthesis_btn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/tts_synthesis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_translation_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>